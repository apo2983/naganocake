<div class="row">
	<% if @genre.errors.any? %>
		<div class="alert alert-warning">
			<h2><%= @genre.errors.count %> 件のエラーがあります。</h2>
			<ul>
				<% @genre.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</div>
<h3>ジャンル編集</h3>
<div class="row mt-5rem">
	<%= form_with model: @genre,url: admin_genre_path(@genre.id),id: 'admin_genre',class: 'admin_genre',local: true do |f| %>
		<div class="field">
			<%= f.label :name,"ジャンル" %>
			<%= f.text_field :name %>
			<%= f.radio_button :is_valid, :true %>
			<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
			<%= f.radio_button :is_valid, :false %>
			<%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
			<%= f.submit "変更を保存する",class:'btn btn-info ml-15px'%>
		</div>
	<% end %>
</div>