<h3>商品一覧</h3>
<div class="plus-icon">
	<%= link_to  new_admin_item_path do %>
		<i class="fas fa-plus-circle"></i>
	<% end %>
</div>
<div class="row mt-15px ">
	<table class="table" style="table-layout: fixed;">
		<thead>
			<tr>
				<th style="width: 5%;">商品ID</th>
				<th>商品名</th>
				<th style="width: 10%;">税別価格</th>
				<th>ジャンル</th>
				<th style="width: 10%;">ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td style="text-decoration: underline;"><%= item.name %></td>
					<td><%= item.price %></td>
					<td><%= item.genre.name %></td>
					<% if item.is_sale == true %>
						<td>販売中</td>
					<% else %>
						<td>販売停止中</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>