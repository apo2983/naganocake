<h2>登録情報編集</h2>

<%= form_with model: current_end_user,url: end_users_path,id: 'edit_end_user',class: 'edit_end_user',local: true do |f| %>
<%#<%= render "devise/shared/error_messages", resource: resource %>
  <div class="row field">
    <div class="col-xs-2">
      <%= f.label :last_name, "名前" %> 
    </div>
    <div class="col-xs-2">
      <p style='text-align: right;'>(姓)</p>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :last_name,class:'col-xs-12' %>
    </div>
    <div class="col-xs-5">
      <div class="col-xs-3">
        <p style='text-align: right;'>(名)</p>
      </div>
      <div class="col-xs-7">
         <%= f.text_field :first_name,class:'col-xs-12' %>
      </div>
    </div>
  </div>

  <div class="row field">
    <div class="col-xs-2">
       <%= f.label :last_name_kana, "フリガナ" %>
    </div>
    <div class="col-xs-2">
      <p style='text-align: right;'>(セイ)</p>
    </div>
    <div class="col-xs-3">
      <%= f.text_field :last_name_kana,class:'col-xs-12' %>
    </div>
    <div class="col-xs-5">
      <div class="col-xs-3">
        <p style='text-align: right;'>(メイ)</p>
      </div>
      <div class="col-xs-7">
         <%= f.text_field :first_name_kana,class:'col-xs-12' %>
      </div>
    </div>
  </div>

  <div class="row field">
    <div class="col-xs-3">
      <%= f.label :email,"メールアドレス" %>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
       <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'col-xs-12' %>
    </div>
  </div>

  <div class="row field">
    <div class='col-xs-3'>
       <%= f.label :postal_code,"郵便番号(ハイフンなし)"%>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
       <%= f.text_field :postal_code,class:'col-xs-12' %>
    </div>
  </div>

  <div class="row field">
    <div class='col-xs-3'>
       <%= f.label :address,"住所"%>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
        <%= f.text_field :address,class:'col-xs-12' %>
    </div>
  </div>

  <div class="row field">
     <div class='col-xs-3'>
       <%= f.label :phone_number,"電話番号(ハイフンなし)"%>
    </div>
    <div class="col-xs-3 col-xs-offset-1">
      <%= f.text_field :phone_number,class:'col-xs-12' %>
    </div>
  </div>

  <div class="row mt-15px" style="text-align: center;">
    <%= f.submit "編集内容を保存する",class:'btn btn-primary mr-5rem' %>
    <%= link_to "退会する",end_users_leave_path,class:'btn btn-danger' %>
  </div>

<% end %>
