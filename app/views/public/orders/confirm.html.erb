<h3>注文情報確認</h3>
<div class="row">
	<div class="col-xs-8">
		<table class="table">
			<thead>
				<tr>
					<th>商品名</th>
					<th style="width: 10%;">単価(税込)</th>
					<th style="width: 10%;">数量</th>
					<th style="width: 10%;">小計</th>
				</tr>
			</thead>
			<tbody>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td><%= attachment_image_tag cart_item.item ,:image,fallback:'no_image.jpg',format:'jpeg',size:'30x40'%>
							<p class="order-confirm"><%= cart_item.item.name %></p>
						</td>
						<td><%= "#{cart_item.item.price * 1.10}".to_i.to_s(:delimited) %></td>
						<td><%= cart_item.quantity %></td>
						<td><%= "#{cart_item.item.price * 1.10 * cart_item.quantity}".to_i.to_s(:delimited) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-xs-3">
		<table class="table">
			<tr>
				<th>送料</th>
				<td><%= @order.postage.to_i.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th>商品合計</th>
				<td><%= "#{@order.total_payment - @order.postage}".to_i.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th>請求金額</th>
				<td><%= @order.total_payment.to_s(:delimited)%></td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-8">
		<h4><strong>支払方法</strong></h4>
		<p class="order-confirm"><%= @order.payment_method_i18n %></p>
	</div>
</div>
<div class="row">
	<div class="col-xs-8">
		<h4><strong>お届け先</strong></h4>
		<p style="margin-bottom: 0;"><%= @order.postal_code%> <%= @order.address %>
		<br><%= @order.name %></p>
	</div>
</div>
<div class="row">
	<div class="col-xs-4 col-xs-offset-4">
		<%= link_to "購入を確定する",orders_path,method: :post,class:'btn btn-success'%>
	</div>
</div>


