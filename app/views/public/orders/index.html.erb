<style>
  p{
    margin-bottom:0;
  }
</style>
<h2>注文履歴一覧</h2>
<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th >注文日</th>
        <th style="width: 40rem;">配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td style="line-height: 10rem;">
            <%= link_to order_path(order.id) do %>
              <%= order.created_at.to_s(:date_jp) %>
            <% end %>
          </td>
          <td>
            <p><%= order.postal_code %></p>
            <p><%= order.address %></p>
            <p><%= order.name %></p>
            <p></p>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
             <p>
              <%= order_detail.item.name %>
             </p>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する",order_path(order.id),class:'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>